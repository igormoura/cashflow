{% extends './v1/layout/default' %}

{% block breadcrumbs %}
    {{ Breadcrumbs.render(Route.getCurrentRoute.getName) }}
{% endblock %}

{% block content %}

    <form method="POST" action="{{ route('customers.store') }}" accept-charset="UTF-8" class="form-horizontal"
          id="store" enctype="multipart/form-data">
        <input name="_token" type="hidden" value="{{ csrf_token() }}">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="box box-primar  y">
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ 'mandatoryFields'|_ }}</h3>
                    </div>
                    <div class="box-body">
                        {{ ExpandedForm.text('name') }}
                    </div>
                    <div class="box-body">
                        {{ ExpandedForm.text('gender') }}
                    </div>
                    <div class="box-body">
                        {{ ExpandedForm.text('cellphone') }}
                    </div>
                    <div class="box-body">
                        {{ ExpandedForm.text('email') }}
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {# panel for optional fields #}
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ 'optionalFields'|_ }}</h3>
                    </div>
                    <div class="box-body">
                        {{ ExpandedForm.textarea('notes', null, {helpText: trans('firefly.field_supports_markdown')} ) }}
                        {{ ExpandedForm.file('attachments[]', {'multiple': 'multiple','helpText': trans('firefly.upload_max_file_size', {'size': uploadSize|filesize}) }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {# panel for optional fields #}
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ 'address'|_ }}</h3>
                    </div>
                    <div class="box-body">
                        <div class="box-body">
                            {{ ExpandedForm.text('zipCode') }}
                        </div>
                        <div class="box-body">
                            {{ ExpandedForm.text('state') }}
                        </div>
                        <div class="box-body">
                            {{ ExpandedForm.text('city') }}
                        </div>
                        <div class="box-body">
                            {{ ExpandedForm.text('address') }}
                        </div>
                        <div class="box-body">
                            {{ ExpandedForm.text('addressNumber') }}
                        </div>
                        <div class="box-body">
                            {{ ExpandedForm.text('addressComplement') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {# panel for options #}
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ 'options'|_ }}</h3>
                    </div>
                    <div class="box-body">
                        {{ ExpandedForm.optionsList('create','customer') }}
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn pull-right btn-success">
                            {{ 'store_customer'|_ }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
{% block scripts %}
    <script type="text/javascript" src="v1/js/ff/budgets/create.js?v={{ FF_VERSION }}" nonce="{{ JS_NONCE }}"></script>
{% endblock %}
